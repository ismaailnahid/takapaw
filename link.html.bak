  <title>Smart Copy Tool</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Rubik&display=swap');

    html, body {
      margin: 0;
      padding: 0;
      font-family: 'Rubik', sans-serif;
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .card {
      background-color: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(12px);
      border-radius: 20px;
      padding: 25px 30px;
      max-width: 900px;
      width: 100%;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
      box-sizing: border-box;
    }

    .card h2 {
      text-align: center;
      margin-bottom: 20px;
    }

    .section-title {
      font-size: 18px;
      font-weight: bold;
      margin: 25px 0 10px;
      border-bottom: 1px solid rgba(255,255,255,0.3);
      padding-bottom: 5px;
    }

    .links-container {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      justify-content: center;
    }

    .link-item {
      background-color: rgba(255,255,255,0.15);
      border-radius: 10px;
      padding: 10px 20px;
      display: flex;
      align-items: center;
      gap: 15px;
      min-width: 180px;
      max-width: 220px;
      flex: 1 1 180px;
      transition: background-color 0.3s;
    }

    .link-item:hover {
      background-color: rgba(255,255,255,0.25);
    }

    .link-item a {
      color: #fff;
      text-decoration: none;
      font-size: 16px;
      font-weight: 600;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      flex-grow: 1;
      display: flex;
      align-items: center;
    }

    .link-item a img {
      margin-right: 8px;
      flex-shrink: 0;
    }

    .copy-btn {
      background-color: #5a3e9e;
      border: none;
      color: #fff;
      padding: 6px 14px;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 600;
      font-size: 14px;
    }

    .copy-btn:hover {
      background-color: #382466;
    }

    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      backdrop-filter: blur(10px);
      background: rgba(0, 0, 0, 0.35);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 9999;
    }

    .overlay.show {
      display: flex;
    }

    .toast {
      background: linear-gradient(145deg, #5a3e9e, #764ba2);
      color: #fff;
      padding: 20px 50px;
      border-radius: 25px;
      font-size: 20px;
      font-weight: 700;
      box-shadow: 0 4px 15px rgba(90, 62, 158, 0.8), 0 10px 40px rgba(118, 75, 162, 0.7);
      opacity: 0;
      transform: translateY(30px) scale(0.9);
      transition: all 0.3s ease;
    }

    .toast.show {
      opacity: 1;
      transform: translateY(0) scale(1);
    }

    @media (max-width: 600px) {
      .link-item {
        min-width: 100%;
        max-width: 100%;
        flex: 1 1 100%;
      }

      .link-item a {
        font-size: 14px;
      }

      .copy-btn {
        padding: 6px 12px;
        font-size: 13px;
      }

      .toast {
        padding: 15px 30px;
        font-size: 16px;
      }
    }
  </style>
</head>
